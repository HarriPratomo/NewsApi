<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rowLayout"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/rect_filter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp">
            <ImageView
                android:id="@+id/imageNews"
                android:background="@drawable/rect_filter"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/news_logo"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txttitleNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Sejumlah Ttempat terdampak Corona menjadi salah satu berita"
                    android:fontFamily="@font/gilroy_bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/sourceData"
                    android:text="Detik.com"
                    android:fontFamily="@font/gilroy_bold"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/newsDate"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12/2/2020"
                    android:textSize="12sp"
                    android:fontFamily="@font/gilroy"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>